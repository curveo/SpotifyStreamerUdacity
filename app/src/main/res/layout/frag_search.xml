<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iprodev.spotifystreamer.frags.SearchFragment">

    <ListView
        android:id="@+id/results_artists_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:choiceMode="singleChoice"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="@drawable/item_selector"
        android:visibility="gone"
        tools:listitem="@layout/row_result" />

    <TextView
        android:id="@+id/noresults_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/noresults"
        android:textSize="@dimen/large_font"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/spot_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/spot_icon_help"
        android:gravity="center"
        android:src="@drawable/spotify_icon" />

</RelativeLayout>